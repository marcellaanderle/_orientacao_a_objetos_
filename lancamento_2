class Geometrica: #classe pai
    #inicilizando a instância
    def __init__(self, quantidade_lados, valor_lados, nome):
        self.quantidade_lados = quantidade_lados
        self.valor_lados = valor_lados
        self.nome = nome

    def area(self):
        pass

class Circulo(Geometrica):
    def __init__(self, raio):
    #definindo um novo comportamento
        super().__init__(0,[],'circulo')
        self.raio = raio

    def area(self):
        return (3.14 * self.raio * self.raio)
class Triangulo(Geometrica):
    def __init__(self):
        super().__init__(3, [], 'triângulo')

def main():
    triangulo = Triangulo()
    quadrado = Geometrica(4, [5, 5, 5, 5], 'quadrado')
    circulo = Circulo(0)
    circulo.raio = 7.5
    poligono = Geometrica(5, [6, 6, 6, 6, 6], 'pentágono')
    poligono.quanidade_lados = 5

    print("A área do círculo é:", circulo.area())
    print("A área do pentágono é:", poligono.area())

    print("Digite o número de lados")
    n_lados = int(input())

    print("Digite o valor dos lados separados por vírgula:")
    valor_lados = list(map(int, input().split(",")))

    print("Por fim, digite o nome da forma geométrica:")
    nome = input()

    forma_inserida = Geometrica(n_lados, valor_lados, nome)
    print("Quantidade de lados:", forma_inserida.quantidade_lados)
    print("Valor dos lados:", forma_inserida.valor_lados)
    print("Nome:", forma_inserida.nome)


if __name__ == "__main__":
    main()

